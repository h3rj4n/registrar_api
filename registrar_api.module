/**
 * Return the form for admin/settings/registrar_api/registrars/{RNAME}.
 *
 * Load the registrar specific form and extend it with items to set
 * default contacts' handlers.
 */
function registrar_api_registrar_settings_form($form_state, $rname) {
  $form = call_user_func_array($rname.'_settings_form', $form_state);
  $form['registrar'] = array(
    '#type' => 'hidden',
    '#value' => $rname,
  );

  $form[$rname]['#weight'] = -20;
  $form['handles'] = array(
    '#type' => 'fieldset',
    '#title' => t('Default contacts'),
    '#description' => t('You can specify default contacts for domains registered with this registrar. If a default contact is choosen for any contact type, users without the «override default contacts» permission will not be able to change that contact type on domain creation.'),
    '#collapsible' => TRUE,
    '#weight' => -10,
  );
  $contacts = (object) array();
  foreach (array('registrar', 'tech', 'adm') as $ctype) {
    $ctype = $ctype.'_handle';
    $variable = 'registrar_api_'.$rname.'_default_'.$ctype;
    $nid = variable_get($variable, FALSE);
    if ($nid) {
      $handle = db_result(db_query("SELECT title FROM {node} n WHERE nid=%d", $nid));
      $contacts->{$ctype} = $handle;
    }
  }
  $handles = _registrar_api_domain_handles_form($contacts, FALSE);
  $form['handles'] += $handles;
  array_unshift($form['#submit'], 'registrar_api_registrar_settings_form_submit');
  return $form;
}

/**
 * Validate callback.
 */
function registrar_api_registrar_settings_form_validate($form, &$form_state) {
  foreach (array('registrar', 'tech', 'adm') as $ctype) {
    $ctype = $ctype.'_handle';
    $handle = $form_state['values'][$ctype];
    if (empty($handle)) {
      continue;
    }
    else {
      $node = node_load(array('title' => $handle, 'type' => 'registrar_api_contact'));
      if (!$node) {
        form_error($form['handles'][$ctype], t('Invalid handle.'));
      }
      else {
        form_set_value($form['handles'][$ctype], $node->nid, $form_state);
      }
    }
  }
}

/**
 * Submit callback.
 */
function registrar_api_registrar_settings_form_submit($form, &$form_state) {
  $rname = $form_state['values']['registrar'];
  unset($form_state['values']['registrar']);
  foreach (array('registrar', 'tech', 'adm') as $ctype) {
    $ctype = $ctype.'_handle';
    $variable = 'registrar_api_'.$rname.'_default_'.$ctype;
    $handle = $form_state['values'][$ctype];
    variable_set($variable, $handle);
    unset($form_state['values'][$ctype]);
  }
}

/**
 * Provide a list of all available registrars
 */
function registrar_api_get_registrars() {
  return module_invoke_all('registrar_info');
}

/**
 * Split a domain name into it's TLD and name parts.
 *
 * @param string $domain_name
 */
function registrar_api_split_domain_name($domain_name) {
  $matches = array();
  preg_match('/(.*)\.(.*)$/', $domain_name, $matches);
  array_shift($matches);
  return $matches;
}

/**** Pages ****/
function registrar_api_user_page($user) {
  $result = db_query("
		SELECT * FROM {registrar_api_user_handles} handles 
			LEFT JOIN {registrar_api_contact} contact 
			ON (handles.nid = contact.nid)
				LEFT JOIN {node} node 
					ON (contact.nid = node.nid)
		WHERE  handles.uid = %d", $user->uid);
  $table_header = array('Handle', 'Contact name', 'Company');
  $table_data   = array();
  while ($contact = db_fetch_object($result)) {
    $attr = array('title' => _registrar_api_format_contact_info($contact));
    $table_data[] = array(l($contact->title, 'node/'. $contact->nid, array('attributes' => $attr)), _registrar_api_full_contact_name($contact), $contact->company_name);
  }
  return theme_table($table_header, $table_data);
}

